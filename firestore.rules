rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function signedIn() { return request.auth != null; }
    function isOwner(uid) { return signedIn() && request.auth.uid == uid; }

    match /users/{uid} {
      allow read, update: if isOwner(uid);
      allow create: if signedIn();
    }

    match /verifications/{id} {
      allow read: if resource.data.public == true || isOwner(resource.data.uid);
      allow create: if signedIn();
      allow update, delete: if isOwner(resource.data.uid);
    }

    match /chatHistory/{threadId} {
      allow read, write: if isOwner(resource.data.uid) || (request.resource.data.uid == request.auth.uid);
    }

    match /usage/{doc} { allow read, write: if isOwner(resource.data.uid); }
    match /plans/{doc} { allow read: if true; }
    match /reports/{doc} { allow read: if true; }
  }
}


